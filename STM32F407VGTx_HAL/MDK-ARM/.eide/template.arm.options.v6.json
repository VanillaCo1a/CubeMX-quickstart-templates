{
    "version": 3,
    "beforeBuildTasks": [],
    "afterBuildTasks": [],
    "global": {
        "use-microLIB": true,
        "output-debug-info": "enable"
    },
    "c/cpp-compiler": {
        "optimization": "level-balanced",
        "language-c": "gnu99",
        "language-cpp": "c++14",
        "link-time-optimization": true,
        "warnings": "ac5-like-warnings",
        "one-elf-section-per-function": true,
        "short-enums#wchar": true
    },
    "asm-compiler": {
        "$use": "asm"
    },
    "linker": {
        "output-format": "elf",
        "misc-controls": "--diag_suppress=L6329"
    }
}